<p id="notice"><%= notice %></p>


  <div class="title ">
      <h4>Groups</h4>
  </div>
   <h4 class ="text-center">most recent</h4>

<section class="group_body">
    
<div class="container-fluid mb-4">
    <% @groups.each do |t| %>
      <div class="card">
           <div class="col-2" >
                <div class="list-group-item group-icon"><%=image_tag t.icon.variant(resize:"80x80")%></div>
           </div>
           <div class="col">
                 <div class="card-body">
                       <h5>Transaction name: <%=link_to t.name,t,class:"text-md" %> </h5>
                      
                       <p class="card-text"> <span>Created by:</span> <%= t.user.username %></p>
                       <p class="card-text">Created At: <small class="text-muted"><%= t.created_at %></small></p>
                  </div>
            </div>
      </div>
<%end%>
</div>
</section>


<%= link_to 'New Group', new_group_path,class: 'btn btn-primary' %>
<%= link_to 'Back', root_path,class: 'btn btn-primary'%>


