  <div class="title">
      Transactions for a specific group
  </div>
   <h3 class ="text-center">most recent</h3>

<section class="transaction_body">
    <div class="total_amount_sec ">
          <span>Total amount:$<%= @total_g %><span>
    </div>
<div class="container-fluid ">
    <% @group_t.each do |t| %>
      <div class="card">
           <div class="col-4" >
                <div class="list-group-item group-icon"><%= image_tag t.group.icon,style:"width:120px; display:block" %></div>
           </div>
           <div class="col-8">
                 <div class="card-body">
                       <h5 class="card-title">Transaction name: <%= t.name %> </h5>
                       <p class="card-text"> <span>Amount:$</span><%= t.amount %></p>
                       <p class="card-text"> <span>Created by:</span> <%= t.user.username %></p>
                       <p class="card-text">Created At: <small class="text-muted"><%= t.created_at %></small></p>
                  </div>
            </div>
      </div>
<%end%>
</div>
</section>



