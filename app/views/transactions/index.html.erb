<p id="notice"><%= notice %></p>

<h1>Transactions</h1>
 <h3>Total amount: <%= @transaction_sum %></h5>
    <% @transactions.each do |transaction| %>
      
    <div class="list-group">

  <div class="list-group-item list-group-item-action"><h4><%= transaction.name %></h4></div>
  
   <div class="list-group-item list-group-item-action"><%= transaction.amount %></div>
   
    <div class="list-group-item list-group-item-action"><div class='d-flex justify-content-between align-items-center'>
                  <h5>transaction by: <%= transaction.name %> </h5>
                   <h5><%= transaction.created_at.strftime("%d %B %Y") %> </h5>
            </div>
           
           
           <div class="d-flex justify-content-between">
           <%= link_to 'Show', transaction,class:'btn btn-warning' %>
        <%= link_to 'Edit', edit_transaction_path(transaction),class:'btn btn-warning' %>
        <%= link_to 'Destroy', transaction,class:'btn btn-warning', method: :delete, data: { confirm: 'Are you sure?' } %>
      
           </div>
           </div>
           <%end%>
      </div>
    
     
 

<br>

